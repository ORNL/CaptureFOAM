FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    "(top|outlet)"
    {
        type            zeroGradient;
    }

    film
    {
        type            fixedValue;
        value           uniform 300;
    }

    "(left|right)"
    {
        type            cyclic;
    }
}

